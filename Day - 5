#-----------------------------------------------------------------------------------------------------------------------------------------
#Leaf year program
year=int(input("Enter the year :"))
if (year % 4==0):
  print(f"{year} is leaf Year")
elif (year % 400==0):
  print(f"  {year} is leaf Year")
elif (year % 100==0):
  print(f" {year} is leaf Year")
else:
  print(f"{year} is not leaf year")
